---
/**
 * About Page
 */

import BaseLayout from "../layouts/BaseLayout.astro";

/**
 * TIMELINE - Add events here
 */
const timelineEvents = [
  {
    date: "2007-07-06",
    title: "Born",
    description: "Houston, Texas",
    type: "life",
  },
];

const sortedEvents = timelineEvents.sort(
  (a, b) => new Date(a.date).getTime() - new Date(b.date).getTime(),
);

const typeColors: Record<string, string> = {
  life: "#6B7280",
  education: "#3B82F6",
  work: "#10B981",
  research: "#8B5CF6",
  project: "#EC4899",
};
---

<BaseLayout title="About" description="About aryan singh">
  <div class="about">
    <section class="about__intro">
      <h1 class="animate-slide-up">About</h1>

      <p class="animate-slide-up delay-1">
        Hi! I'm Aryan, a student at Johns Hopkins studying CS and BME.
      </p>

      <p class="animate-slide-up delay-2">
        I'm drawn to problems at the edge of what we understand. Currently
        interested in quantum tech, advancing AI, and empowering humans with
        tech. I like to build things that didn't exist before.
      </p>

      <p class="animate-fade-in delay-3">
        Outside of that: I read a lot (fiction, philosophy, random Wikipedia
        rabbit holes at 2am). I occasionally go to the gym and religiously skip
        leg day. I walk with no destination in mind. I have long conversations
        about nothing and everything.
      </p>

      <p class="animate-fade-in delay-3">
        I love meeting new people. If you want to chat about anything,
        seriously,
        <a href="#contact">reach out</a>! I'd love to hear from you.
      </p>

      <div class="cta animate-fade-in delay-4">
        <a href="/blog">Read my writing</a>
        <a href="/portfolio">See my projects</a>
      </div>
    </section>

    <!-- Timeline -->
    <section class="about__timeline">
      <h2>Timeline</h2>

      <div class="timeline">
        <div class="timeline__line"></div>

        {
          sortedEvents.map((event) => {
            const eventDate = new Date(event.date);

            return (
              <div
                class="timeline__event"
                style={`--color: ${typeColors[event.type] || typeColors.life}`}
              >
                <div class="event__dot" />
                <div class="event__content">
                  <span class="event__date">
                    {eventDate.toLocaleDateString("en-US", {
                      month: "short",
                      year: "numeric",
                    })}
                  </span>
                  <h3 class="event__title">{event.title}</h3>
                  <p class="event__description">{event.description}</p>
                </div>
              </div>
            );
          })
        }
      </div>
    </section>

    <!-- Contact -->
    <section class="about__contact" id="contact">
      <h2>Get in Touch</h2>
      <div class="contact-links">
        <a href="mailto:aryanrheasingh@gmail.com">aryanrheasingh@gmail.com</a>
        <a href="mailto:asing168@jh.edu">asing168@jh.edu</a>
        <a href="https://github.com/heyaryansingh" target="_blank">github</a>
        <a href="https://linkedin.com/in/real-aryan-singh" target="_blank"
          >linkedin</a
        >
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about {
    max-width: 600px;
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-xl);
  }

  .about__intro {
    margin-bottom: var(--space-3xl);
  }

  .about__intro h1 {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: 400;
    margin: 0 0 var(--space-lg);
  }

  .about__intro p {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin: 0 0 var(--space-md);
    font-size: var(--text-base);
  }

  .about__intro a {
    color: var(--color-accent-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .cta {
    display: flex;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .cta a {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .cta a:hover {
    text-decoration: underline;
  }

  /* Timeline */
  .about__timeline {
    margin-bottom: var(--space-3xl);
  }

  .about__timeline h2 {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    font-weight: 400;
    margin: 0 0 var(--space-xl);
  }

  .timeline {
    position: relative;
    padding: var(--space-md) 0;
  }

  .timeline__line {
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline__event {
    position: relative;
    padding-left: var(--space-2xl);
    margin-bottom: var(--space-xl);
  }

  .timeline__event:last-child {
    margin-bottom: 0;
  }

  .event__dot {
    position: absolute;
    left: 0;
    top: 4px;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--color);
    border: 3px solid var(--color-bg-primary);
    box-shadow: 0 0 0 2px var(--color);
  }

  .event__date {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .event__title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: var(--space-xs) 0;
    color: var(--color-text-primary);
  }

  .event__description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Contact */
  .about__contact {
    scroll-margin-top: 50vh;
  }

  .about__contact h2 {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    font-weight: 400;
    margin: 0 0 var(--space-md);
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .contact-links a {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
  }

  .contact-links a:hover {
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }

  /* Animations */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-slide-up {
    animation: slideUp 0.5s ease forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease forwards;
    opacity: 0;
  }

  .delay-1 {
    animation-delay: 0.1s;
  }
  .delay-2 {
    animation-delay: 0.2s;
  }
  .delay-3 {
    animation-delay: 0.3s;
  }
  .delay-4 {
    animation-delay: 0.5s;
  }
</style>
