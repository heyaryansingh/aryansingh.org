---
/**
 * Homepage
 *
 * The main landing page featuring:
 * - Hero section (WebGL particles added in Phase 5)
 * - Featured projects carousel
 * - Latest blog posts
 * - Currently widget
 *
 * Navigation and Footer are handled by BaseLayout.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home" description="Personal website of Aryan Singh - Software Engineer, Researcher, Writer">
  <!-- Hero Section (placeholder for WebGL in Phase 5) -->
  <section class="hero">
    <!-- Placeholder background gradient -->
    <div class="hero__bg"></div>

    <div class="container hero__content">
      <h1 class="hero__title">
        Aryan Singh
      </h1>
      <p class="hero__tagline">
        Software Engineer, Researcher, and Writer exploring the intersection of technology, AI, and human creativity.
      </p>
      <div class="hero__cta">
        <a href="/portfolio" class="btn btn--primary">
          View My Work
        </a>
        <a href="/blog" class="btn btn--secondary">
          Read My Writing
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section (placeholder) -->
  <section class="section section--alt">
    <div class="container">
      <h2 class="section__title">
        Featured Projects
      </h2>
      <div class="projects-grid">
        {[1, 2, 3].map((i) => (
          <article class="project-card float-card hover-lift">
            <div class="project-card__image"></div>
            <div class="project-card__content">
              <h3 class="project-card__title">Project {i}</h3>
              <p class="project-card__description">
                A brief description of this amazing project and what it does.
              </p>
              <div class="project-card__tags">
                <span class="tag">TypeScript</span>
                <span class="tag">React</span>
              </div>
            </div>
          </article>
        ))}
      </div>
      <div class="section__cta">
        <a href="/portfolio" class="link-underline">
          View all projects â†’
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Section (placeholder) -->
  <section class="section">
    <div class="container">
      <h2 class="section__title">
        Latest Writing
      </h2>
      <div class="blog-grid">
        {[1, 2, 3].map((i) => (
          <article class="blog-card group">
            <time class="blog-card__date">January {i}, 2026</time>
            <h3 class="blog-card__title">
              <a href={`/blog/post-${i}`} class="group-hover:underline">
                Blog Post Title {i}
              </a>
            </h3>
            <p class="blog-card__excerpt">
              A short excerpt from the blog post that gives readers a preview of what to expect.
            </p>
            <span class="tag">Technical</span>
          </article>
        ))}
      </div>
      <div class="section__cta">
        <a href="/blog" class="link-underline">
          Read all posts â†’
        </a>
      </div>
    </div>
  </section>

  <!-- Currently Widget Section (placeholder) -->
  <section class="section section--alt">
    <div class="container container--narrow">
      <h2 class="section__title">
        Currently
      </h2>
      <div class="currently-grid">
        <div class="currently-card float-card">
          <h3 class="currently-card__title currently-card__title--reading">
            ðŸ“š Reading
          </h3>
          <p class="currently-card__content">The Art of Doing Science and Engineering</p>
          <p class="currently-card__meta">by Richard Hamming</p>
        </div>
        <div class="currently-card float-card">
          <h3 class="currently-card__title currently-card__title--building">
            ðŸ”¨ Building
          </h3>
          <p class="currently-card__content">This website</p>
          <p class="currently-card__meta">A custom personal site with Astro</p>
        </div>
        <div class="currently-card float-card">
          <h3 class="currently-card__title currently-card__title--thinking">
            ðŸ’­ Thinking
          </h3>
          <p class="currently-card__content">About the future of human-AI collaboration</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: calc(100vh - 64px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      var(--color-accent-primary) 0%,
      var(--color-accent-secondary) 50%,
      var(--color-accent-tertiary) 100%
    );
    opacity: 0.08;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .hero__title {
    font-size: var(--text-6xl);
    font-family: var(--font-serif);
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }

  .hero__tagline {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.6;
  }

  .hero__cta {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-md) var(--space-xl);
    border-radius: var(--radius-lg);
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .btn--primary {
    background: var(--color-accent-primary);
    color: white;
  }

  .btn--primary:hover {
    background: var(--color-accent-secondary);
    transform: translateY(-2px);
  }

  .btn--secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    background: var(--color-bg-primary);
  }

  .btn--secondary:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
  }

  /* Sections */
  .section {
    padding: var(--space-4xl) 0;
  }

  .section--alt {
    background: var(--color-bg-secondary);
  }

  .section__title {
    font-size: var(--text-4xl);
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .section__cta {
    text-align: center;
    margin-top: var(--space-3xl);
  }

  .section__cta a {
    color: var(--color-accent-primary);
    font-weight: 500;
  }

  /* Container variations */
  .container--narrow {
    max-width: 700px;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .project-card {
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .project-card__image {
    height: 180px;
    background: linear-gradient(
      135deg,
      var(--color-accent-primary),
      var(--color-accent-secondary)
    );
    opacity: 0.3;
  }

  .project-card__content {
    padding: var(--space-lg);
  }

  .project-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
  }

  .project-card__description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  .project-card__tags {
    display: flex;
    gap: var(--space-sm);
  }

  /* Tags */
  .tag {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .blog-card {
    padding: var(--space-lg);
  }

  .blog-card__date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  .blog-card__title {
    font-size: var(--text-xl);
    margin: var(--space-sm) 0;
  }

  .blog-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .blog-card__excerpt {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  /* Currently Grid */
  .currently-grid {
    display: grid;
    gap: var(--space-lg);
  }

  .currently-card {
    padding: var(--space-lg);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
  }

  .currently-card__title {
    font-size: var(--text-lg);
    font-family: var(--font-sans);
    margin-bottom: var(--space-sm);
  }

  .currently-card__title--reading {
    color: var(--color-accent-primary);
  }

  .currently-card__title--building {
    color: var(--color-accent-secondary);
  }

  .currently-card__title--thinking {
    color: var(--color-accent-tertiary);
  }

  .currently-card__content {
    color: var(--color-text-primary);
    margin: 0;
  }

  .currently-card__meta {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin: var(--space-xs) 0 0;
  }
</style>
