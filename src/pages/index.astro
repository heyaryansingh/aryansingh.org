---
/**
 * Homepage
 *
 * The main landing page featuring:
 * - Hero section (WebGL particles added in Phase 5)
 * - Featured projects carousel
 * - Latest blog posts
 * - Currently widget
 *
 * Navigation and Footer are handled by BaseLayout.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ParticleHero from '../components/ParticleHero.astro';
import HeroContent from '../components/HeroContent.astro';
import FeaturedProjects from '../components/FeaturedProjects.astro';
import LatestPosts from '../components/LatestPosts.astro';
import Currently from '../components/Currently.astro';
---

<BaseLayout title="Home" description="Personal website of Aryan Singh - Software Engineer, Researcher, Writer">
  <!-- Hero Section with WebGL Particles -->
  <ParticleHero>
    <HeroContent />
  </ParticleHero>

  <!-- Featured Projects Section -->
  <section class="section section--alt" id="projects">
    <div class="container">
      <header class="section__header">
        <span class="section__label">Selected Work</span>
        <h2 class="section__title">Featured Projects</h2>
        <p class="section__description">
          A selection of projects I've built, from research tools to creative experiments.
        </p>
      </header>

      <FeaturedProjects />

      <div class="section__cta">
        <a href="/portfolio" class="link-arrow">
          View all projects
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Section -->
  <section class="section" id="writing">
    <div class="container">
      <header class="section__header">
        <span class="section__label">Recent Writing</span>
        <h2 class="section__title">Latest Posts</h2>
        <p class="section__description">
          Thoughts on technology, research, and building things.
        </p>
      </header>

      <LatestPosts />

      <div class="section__cta">
        <a href="/blog" class="link-arrow">
          Read all posts
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Currently Widget Section -->
  <section class="section section--alt" id="currently">
    <div class="container container--narrow">
      <header class="section__header">
        <span class="section__label">Right Now</span>
        <h2 class="section__title">Currently</h2>
        <p class="section__description">
          What I'm working on, learning, and thinking about.
        </p>
      </header>

      <Currently />
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="section section--cta">
    <div class="container container--narrow">
      <h2 class="cta__title">Let's Connect</h2>
      <p class="cta__description">
        I'm always interested in new opportunities, collaborations, or just a good conversation about technology and ideas.
      </p>
      <div class="cta__buttons">
        <a href="mailto:hello@aryansingh.org" class="btn btn--primary">
          Say Hello
        </a>
        <a href="/about" class="btn btn--secondary">
          Learn More About Me
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Sections */
  .section {
    padding: var(--space-4xl) 0;
  }

  .section--alt {
    background: var(--color-bg-secondary);
  }

  .section--cta {
    text-align: center;
    background: linear-gradient(
      180deg,
      var(--color-bg-primary) 0%,
      var(--color-bg-secondary) 100%
    );
  }

  .section__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .section__label {
    display: inline-block;
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
    margin-bottom: var(--space-sm);
  }

  .section__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }

  .section__description {
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto;
  }

  .section__cta {
    text-align: center;
    margin-top: var(--space-3xl);
  }

  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-accent-primary);
    font-weight: 500;
    text-decoration: none;
    transition: gap var(--transition-fast);
  }

  .link-arrow:hover {
    gap: var(--space-md);
  }

  .link-arrow svg {
    transition: transform var(--transition-fast);
  }

  .link-arrow:hover svg {
    transform: translateX(4px);
  }

  /* Container variations */
  .container--narrow {
    max-width: 700px;
  }

  /* CTA Section */
  .cta__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }

  .cta__description {
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto var(--space-xl);
    line-height: 1.6;
  }

  .cta__buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

</style>
