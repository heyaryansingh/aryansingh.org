---
/**
 * Homepage
 */

import BaseLayout from "../layouts/BaseLayout.astro";
import RandomPhoto from "../components/RandomPhoto";
import RandomQuote from "../components/RandomQuote";
---

<BaseLayout
  title="aryan singh"
  description="Student at Johns Hopkins. Making things and thinking about stuff."
>
  <div class="home">
    <!-- Main Layout - moved higher -->
    <div class="home__grid">
      <!-- Left: Photo -->
      <div class="home__photo">
        <RandomPhoto client:load />
      </div>

      <!-- Right: Identity + About -->
      <div class="home__content">
        <h1 class="name animate-slide-up">aryan singh</h1>
        <p class="tagline animate-slide-up delay-1">Student at Johns Hopkins</p>
        <p class="location animate-slide-up delay-2">Baltimore, MD</p>

        <div class="about animate-fade-in delay-3">
          <p>
            Hi! I'm Aryan, a student at JHU studying CS and BME. Right now, I'm
            interested in quantum tech and advancing artificial intelligence.
          </p>
          <p>I like to build things, write, and have new conversations.</p>
          <p>
            <a href="mailto:aryanrheasingh@gmail.com">Say hi</a> - I'd love to talk!
          </p>
        </div>

        <div class="links animate-fade-in delay-4">
          <a href="mailto:aryanrheasingh@gmail.com">email</a>
          <a href="https://github.com/heyaryansingh" target="_blank">github</a>
          <a href="https://linkedin.com/in/real-aryan-singh" target="_blank"
            >linkedin</a
          >
        </div>
      </div>
    </div>

    <!-- Quote - centered at bottom, transparent, text shifted right -->
    <div class="home__quote animate-fade-in delay-5">
      <p class="quote-label">a random quote:</p>
      <RandomQuote client:load />
    </div>

    <!-- Keyboard hint -->
    <div class="home__hint">
      <kbd>Ctrl+K</kbd> to navigate
    </div>
  </div>
</BaseLayout>

<style>
  .home {
    min-height: calc(100vh - 64px);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: clamp(var(--space-lg), 5vw, var(--space-2xl));
    padding-top: clamp(var(--space-xl), 8vw, var(--space-3xl));
    position: relative;
  }

  .home__grid {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-3xl);
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 5;
  }

  @media (max-width: 700px) {
    .home__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .home__photo {
      justify-self: center;
    }
  }

  .home__photo {
    width: clamp(150px, 20vw, 200px);
  }

  .home__content {
    max-width: min(450px, 90vw);
  }

  @media (max-width: 700px) {
    .home__content {
      margin: 0 auto;
    }
  }

  .name {
    font-family: var(--font-serif);
    font-size: var(--text-5xl);
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: var(--space-sm) 0 0;
  }

  .location {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    margin: var(--space-xs) 0 0;
  }

  .about {
    margin-top: var(--space-xl);
  }

  .about p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0 0 var(--space-sm);
  }

  .about a {
    color: var(--color-text-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: var(--color-border);
  }

  .about a:hover {
    color: var(--color-accent-primary);
    text-decoration-color: var(--color-accent-primary);
  }

  .links {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-lg);
  }

  @media (max-width: 700px) {
    .links {
      justify-content: center;
    }
  }

  .links a {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
  }

  .links a:hover {
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }

  /* Quote - below content, scrolls with page, offset to the side */
  .home__quote {
    max-width: min(400px, 85vw);
    text-align: left;
    margin-top: var(--space-xl);
    margin-left: clamp(var(--space-md), 5vw, var(--space-2xl));
  }

  @media (max-width: 700px) {
    .home__quote {
      margin-left: 0;
      text-align: center;
      margin: var(--space-xl) auto 0;
    }
  }

  .quote-label {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    margin: 0 0 var(--space-sm);
    opacity: 0.7;
  }

  /* Hint */
  .home__hint {
    position: fixed;
    bottom: var(--space-xl);
    right: var(--space-xl);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    opacity: 0.5;
    z-index: 5;
  }

  .home__hint kbd {
    padding: 2px 6px;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    font-family: var(--font-mono);
  }

  @media (max-width: 768px) {
    .home__hint {
      display: none;
    }
  }

  /* Animations */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease forwards;
    opacity: 0;
  }

  .delay-1 {
    animation-delay: 0.1s;
  }
  .delay-2 {
    animation-delay: 0.2s;
  }
  .delay-3 {
    animation-delay: 0.3s;
  }
  .delay-4 {
    animation-delay: 0.4s;
  }
  .delay-5 {
    animation-delay: 0.6s;
  }
</style>
