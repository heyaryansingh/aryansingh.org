---
/**
 * Portfolio Page - uses unified nav from BaseLayout
 */

import BaseLayout from "../layouts/BaseLayout.astro";

/**
 * PROJECTS - Add your own here
 */
const projects = [
  {
    name: "Example Project",
    tagline: "A placeholder until you add your own",
    description:
      "Replace this with your first project. The description shows on hover.",
    tech: ["Your", "Tech", "Here"],
    link: "https://github.com/heyaryansingh",
    year: "2025",
  },
];
---

<BaseLayout title="Portfolio" description="Projects by aryan singh">
  <div class="portfolio">
    <h1 class="portfolio__title animate-slide-up">Portfolio</h1>
    <p class="portfolio__subtitle animate-fade-in">Projects I've built</p>

    <div class="projects">
      {
        projects.map((project, i) => (
          <article
            class="project animate-slide-up"
            style={`--delay: ${0.2 + i * 0.1}s`}
          >
            <div class="project__main">
              <div class="project__header">
                <h2 class="project__name">{project.name}</h2>
                <span class="project__year">{project.year}</span>
              </div>
              <p class="project__tagline">{project.tagline}</p>
            </div>

            <div class="project__details">
              <p class="project__description">{project.description}</p>

              <div class="project__tech">
                {project.tech.map((t) => (
                  <span class="tech-tag">{t}</span>
                ))}
              </div>

              {project.link && (
                <a href={project.link} target="_blank" class="project__link">
                  View project â†’
                </a>
              )}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</BaseLayout>

<style>
  .portfolio {
    max-width: 650px;
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-xl);
  }

  .portfolio__title {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: 400;
    margin: 0 0 var(--space-xs);
  }

  .portfolio__subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin: 0 0 var(--space-2xl);
  }

  .projects {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .project {
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
    animation: slideUp 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project:hover {
    border-color: var(--color-accent-primary);
  }

  .project__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
  }

  .project__name {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: 0;
  }

  .project__year {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .project__tagline {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    margin: var(--space-xs) 0 0;
    font-style: italic;
  }

  .project__details {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .project:hover .project__details {
    max-height: 200px;
    opacity: 1;
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border-subtle);
  }

  .project__description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-md);
  }

  .project__tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .tech-tag {
    font-size: var(--text-xs);
    padding: 2px 8px;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
  }

  .project__link {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .project__link:hover {
    text-decoration: underline;
  }

  .animate-slide-up {
    animation: slideUp 0.5s ease forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease forwards;
    animation-delay: 0.1s;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
