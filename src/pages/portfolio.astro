// Extract unique categories
const categories = ['all', ...new Set(projects.map(p => p.category))];
---

<BaseLayout title="Portfolio" description="Projects and work by Aryan Singh - Software Engineer and Researcher">
  <section class="portfolio-hero">
    <div class="container">
      <header class="portfolio-hero__content">
        <span class="portfolio-hero__label">Portfolio</span>
        <h1 class="portfolio-hero__title">My Work</h1>
        <p class="portfolio-hero__description">
          A collection of projects I've built, from research tools to creative experiments.
          Each project represents a learning journey and a problem worth solving.
        </p>
      </header>
    </div>
  </section>

  <section class="portfolio-grid-section">
    <div class="container">
      <ProjectFilter categories={categories} />

      <div class="projects-grid" id="projects-grid">
        {projects.map((project, index) => (
          <ProjectCard project={project} index={index} />
        ))}
      </div>

      <div class="portfolio-empty" id="portfolio-empty" style="display: none;">
        <p>No projects found matching your filter.</p>
        <button class="btn btn--secondary" id="clear-filter">Clear filter</button>
      </div>
    </div>
  </section>

  <section class="portfolio-cta">
    <div class="container container--narrow">
      <h2 class="portfolio-cta__title">Want to see more?</h2>
      <p class="portfolio-cta__description">
        Check out my GitHub for more projects, experiments, and open source contributions.
      </p>
      <a href="https://github.com/aryansingh" class="btn btn--primary" target="_blank" rel="noopener noreferrer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
