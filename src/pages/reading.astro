---
/**
 * Reading Page
 *
 * Books, papers, movies - no icons, clean list
 */

import BaseLayout from "../layouts/BaseLayout.astro";

/**
 * READING LIST - Add your items here
 *
 * {
 *   title: 'Book/Paper/Movie Title',
 *   type: 'book' | 'paper' | 'movie',
 *   date: '2025-01',
 *   thoughts: 'Your thoughts...',
 *   link: 'https://...',
 * }
 */
const readingList = [
    {
        title: "Example Book",
        type: "book",
        date: "2025-01",
        thoughts: "Add your thoughts here. This expands on hover.",
        link: "https://amazon.com",
    },
];
---

<BaseLayout title="Reading" description="Books, papers, and movies">
    <div class="reading">
        <h1 class="reading__title animate-slide-up">Reading</h1>
        <p class="reading__subtitle animate-fade-in">
            Books, papers, and movies I've been consuming
        </p>

        <div class="reading__list">
            {
                readingList.map((item, i) => (
                    <article
                        class="item animate-slide-up"
                        style={`--delay: ${0.1 + i * 0.05}s`}
                    >
                        <a href={item.link} target="_blank" class="item__main">
                            <span class="item__title">{item.title}</span>
                            <span class="item__meta">
                                <span class="item__type">{item.type}</span>
                                <span class="item__date">{item.date}</span>
                            </span>
                        </a>
                        <div class="item__thoughts">
                            <p>{item.thoughts}</p>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</BaseLayout>

<style>
    .reading {
        max-width: 650px;
        margin: 0 auto;
        padding: var(--space-2xl) var(--space-xl);
    }

    .reading__title {
        font-family: var(--font-serif);
        font-size: var(--text-4xl);
        font-weight: 400;
        margin: 0 0 var(--space-xs);
    }

    .reading__subtitle {
        font-size: var(--text-sm);
        color: var(--color-text-tertiary);
        margin: 0 0 var(--space-2xl);
    }

    .reading__list {
        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
    }

    .item {
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        transition: all 0.3s ease;
        animation: slideUp 0.4s ease forwards;
        animation-delay: var(--delay);
        opacity: 0;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .item:hover {
        border-color: var(--color-accent-primary);
    }

    .item__main {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: var(--space-md);
        padding: var(--space-md) var(--space-lg);
        text-decoration: none;
        color: inherit;
    }

    .item__title {
        font-weight: 500;
        color: var(--color-text-primary);
    }

    .item__meta {
        display: flex;
        align-items: center;
        gap: var(--space-md);
    }

    .item__type {
        font-size: var(--text-xs);
        color: var(--color-accent-primary);
        text-transform: lowercase;
    }

    .item__date {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--color-text-tertiary);
    }

    .item__thoughts {
        max-height: 0;
        overflow: hidden;
        opacity: 0;
        transition: all 0.3s ease;
        background: var(--color-bg-secondary);
    }

    .item:hover .item__thoughts {
        max-height: 200px;
        opacity: 1;
    }

    .item__thoughts p {
        padding: var(--space-md) var(--space-lg);
        font-size: var(--text-sm);
        color: var(--color-text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    .animate-slide-up {
        animation: slideUp 0.4s ease forwards;
        opacity: 0;
    }

    .animate-fade-in {
        animation: fadeIn 0.4s ease forwards;
        animation-delay: 0.1s;
        opacity: 0;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
