---
/**
 * Blog Page - uses unified nav from BaseLayout
 */

import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/utils";

const allPosts = await getCollection("blog", ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

const allTags = [
  ...new Set(sortedPosts.flatMap((post) => post.data.tags)),
].sort();
---

<BaseLayout
  title="Blog"
  description="Technical writings and reflections by aryan singh"
>
  <div class="blog-page">
    <div class="blog-page__layout">
      <!-- Sidebar -->
      <aside class="blog-page__sidebar">
        <div class="sidebar-box">
          <h3>About</h3>
          <p>
            Technical and personal writings about life and things I find cool.
          </p>
        </div>

        {
          allTags.length > 0 && (
            <div class="sidebar-box">
              <h3>Tags</h3>
              <div class="tag-cloud">
                {allTags.map((tag) => (
                  <a
                    href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, "-")}`}
                    class="tag"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </aside>

      <!-- Blog List -->
      <main class="blog-page__main">
        <h1 class="blog-title animate-slide-up">Blog</h1>

        {
          sortedPosts.length === 0 ? (
            <p class="empty-state">No posts yet. Check back soon!</p>
          ) : (
            <ul class="post-list">
              {sortedPosts.map((post, i) => (
                <li
                  class="post-item animate-slide-up"
                  style={`--delay: ${0.1 + i * 0.05}s`}
                >
                  <span class="post-date">
                    {formatDate(post.data.date)
                      .replace(/,\s*\d{4}$/, "")
                      .replace(/\w+\s/, "")}
                  </span>
                  <a href={`/blog/${post.slug}`} class="post-title">
                    {post.data.title}
                  </a>
                </li>
              ))}
            </ul>
          )
        }
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .blog-page {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-xl);
  }

  .blog-page__layout {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-2xl);
  }

  @media (max-width: 700px) {
    .blog-page__layout {
      grid-template-columns: 1fr;
    }
  }

  .blog-page__sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .sidebar-box {
    border: 1px solid var(--color-border);
    padding: var(--space-md) var(--space-lg);
  }

  .sidebar-box h3 {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 600;
    margin: 0 0 var(--space-sm) 0;
    color: var(--color-text-primary);
  }

  .sidebar-box p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    font-size: var(--text-xs);
    padding: 2px 8px;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .tag:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
  }

  .blog-title {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: 400;
    margin: 0 0 var(--space-xl) 0;
    color: var(--color-text-primary);
  }

  .empty-state {
    color: var(--color-text-tertiary);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-sm);
    align-items: baseline;
    animation: slideUp 0.4s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-up {
    animation: slideUp 0.4s ease forwards;
    opacity: 0;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    min-width: 70px;
  }

  .post-title {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .post-title:hover {
    color: var(--color-accent-primary);
  }
</style>
