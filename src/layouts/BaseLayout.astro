---
/**
 * Base Layout
 *
 * The foundational layout for all pages. Includes:
 * - HTML document structure
 * - Global CSS import
 * - Font loading
 * - Theme initialization
 * - Navigation & Footer
 * - SEO meta tags slot
 *
 * USAGE:
 * <BaseLayout title="Page Title" description="Page description">
 *   <YourContent />
 * </BaseLayout>
 */

import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import CustomCursor from "../components/CustomCursor.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import CommandPalette from "../components/CommandPalette";
import StarField from "../components/canvas/StarField";
import SpacetimeCursor from "../components/canvas/SpacetimeCursor";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
  hideNav?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description = "Personal website of Aryan Singh - Software Engineer, Researcher, Writer",
  image = "/images/og-default.png",
  canonicalUrl,
  noIndex = false,
  hideNav = false,
  hideFooter = false,
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || "https://aryansingh.org";
const fullUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
const fullImage = image.startsWith("http")
  ? image
  : new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | Aryan Singh</title>
    <meta name="title" content={`${title} | Aryan Singh`} />
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={fullUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={`${title} | Aryan Singh`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullUrl} />
    <meta property="twitter:title" content={`${title} | Aryan Singh`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImage} />

    <!-- Fonts - EB Garamond (serif) + IBM Plex Sans/Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500;600&family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme initialization script (runs before page render to prevent flash) -->
    <script is:inline>
      (function () {
        const mode = localStorage.getItem("mode") || "dark";

        const isDark =
          mode === "dark" ||
          (mode === "auto" &&
            window.matchMedia("(prefers-color-scheme: dark)").matches);

        document.documentElement.classList.toggle("dark", isDark);
        document.documentElement.setAttribute(
          "data-theme",
          isDark ? "dark" : "light",
        );
      })();
    </script>

    <!-- Additional head elements slot -->
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Star Field Background (site-wide) -->
    <StarField client:load starCount={2000} />

    <!-- Spacetime Cursor Effect (manifold lines bend toward cursor) -->
    <SpacetimeCursor client:load lineCount={10} />

    <!-- Custom Cursor (desktop only) -->
    <CustomCursor />

    <!-- Command Palette (Cmd+K navigation) -->
    <CommandPalette client:load />

    <!-- Smooth Scroll -->
    <SmoothScroll />

    <!-- Navigation -->
    {!hideNav && <Navigation />}

    <!-- Main content -->
    <main class="flex-1" style={hideNav ? "" : "padding-top: 64px;"}>
      <slot />
    </main>

    <!-- Footer -->
    {!hideFooter && <Footer />}

    <!-- Global scripts slot -->
    <slot name="scripts" />
  </body>
</html>

<style is:global>
  /* Ensure smooth page load */
  html {
    visibility: visible;
    opacity: 1;
  }

  /* Flex layout for sticky footer */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
