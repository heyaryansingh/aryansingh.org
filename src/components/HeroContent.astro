---
/**
 * Hero Content Component
 *
 * Animated hero text with GSAP animations.
 * Includes kinetic typography and staggered reveals.
 *
 * USAGE:
 * <HeroContent />
 */
---

<div class="hero-content" id="hero-content">
  <p class="hero-intro">
    <span class="reveal-text" data-delay="0">Hi, I'm</span>
  </p>

  <h1 class="hero-title">
    <span class="title-line">
      <span class="title-word reveal-text" data-delay="0.1">Aryan</span>
    </span>
    <span class="title-line">
      <span class="title-word reveal-text" data-delay="0.2">Singh</span>
    </span>
  </h1>

  <p class="hero-tagline">
    <span class="tagline-word reveal-text" data-delay="0.4">Software Engineer,</span>
    <span class="tagline-word reveal-text" data-delay="0.5">Researcher,</span>
    <span class="tagline-word reveal-text" data-delay="0.6">and Writer</span>
    <br />
    <span class="tagline-word reveal-text" data-delay="0.7">exploring the intersection of</span>
    <br />
    <span class="tagline-highlight reveal-text" data-delay="0.8">technology, AI, and human creativity.</span>
  </p>

  <div class="hero-cta reveal-text" data-delay="1">
    <a href="/portfolio" class="btn btn--primary btn--glow">
      <span>View My Work</span>
      <svg class="btn-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
    <a href="/blog" class="btn btn--secondary">
      <span>Read My Writing</span>
    </a>
  </div>

  <div class="hero-scroll reveal-text" data-delay="1.2">
    <span class="scroll-text">Scroll to explore</span>
    <div class="scroll-indicator">
      <div class="scroll-line"></div>
    </div>
  </div>
</div>

<style>
  .hero-content {
    text-align: center;
    max-width: 900px;
    padding: var(--space-2xl) var(--space-md);
  }

  .hero-intro {
    font-size: var(--text-lg);
    color: var(--color-accent-primary);
    font-weight: 500;
    margin-bottom: var(--space-sm);
    overflow: hidden;
  }

  .hero-title {
    font-size: clamp(4rem, 15vw, 10rem);
    font-family: var(--font-serif);
    line-height: 0.95;
    margin-bottom: var(--space-xl);
    letter-spacing: -0.02em;
  }

  .title-line {
    display: block;
    overflow: hidden;
  }

  .title-word {
    display: inline-block;
    background: linear-gradient(
      135deg,
      var(--color-text-primary) 0%,
      var(--color-accent-primary) 40%,
      var(--color-accent-secondary) 70%,
      var(--color-accent-tertiary) 100%
    );
    background-size: 200% 200%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .hero-tagline {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.7;
  }

  .tagline-word {
    display: inline-block;
  }

  .tagline-highlight {
    display: inline-block;
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-4xl);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    border-radius: var(--radius-lg);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .btn span {
    position: relative;
    z-index: 1;
  }

  .btn--primary {
    background: var(--color-accent-primary);
    color: white;
  }

  .btn--primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      var(--color-accent-secondary),
      var(--color-accent-tertiary)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .btn--primary:hover::before {
    opacity: 1;
  }

  .btn--primary:hover {
    transform: translateY(-3px);
    box-shadow:
      0 10px 40px -10px var(--color-accent-primary),
      0 0 20px -5px var(--color-accent-secondary);
  }

  .btn--glow {
    animation: glow-pulse 3s ease-in-out infinite;
  }

  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: 0 0 20px -5px var(--color-accent-primary);
    }
    50% {
      box-shadow: 0 0 30px -5px var(--color-accent-secondary);
    }
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .btn--primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn--secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    background: rgba(var(--color-bg-primary-rgb), 0.5);
    backdrop-filter: blur(10px);
  }

  .btn--secondary:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
    transform: translateY(-3px);
    background: rgba(var(--color-bg-primary-rgb), 0.8);
  }

  .hero-scroll {
    position: absolute;
    bottom: var(--space-2xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .scroll-text {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .scroll-indicator {
    width: 24px;
    height: 40px;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .scroll-line {
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 8px;
    background: var(--color-accent-primary);
    border-radius: 1px;
    animation: scroll-bounce 2s ease-in-out infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateX(-50%) translateY(16px);
      opacity: 0.3;
    }
  }

  /* Reveal animation styles */
  .reveal-text {
    opacity: 0;
    transform: translateY(30px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: clamp(3rem, 12vw, 6rem);
    }

    .hero-tagline {
      font-size: var(--text-lg);
    }

    .hero-scroll {
      display: none;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const heroContent = document.getElementById('hero-content');
    if (!heroContent) return;

    const revealElements = heroContent.querySelectorAll('.reveal-text');

    // Initial state
    gsap.set(revealElements, {
      opacity: 0,
      y: 30,
    });

    // Staggered reveal animation
    revealElements.forEach((el) => {
      const delay = parseFloat((el as HTMLElement).dataset.delay || '0');

      gsap.to(el, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: delay + 0.3, // Add base delay for page load
        ease: 'power3.out',
      });
    });

    // Parallax effect on scroll
    const handleScroll = () => {
      const scrollY = window.scrollY;
      const heroHeight = heroContent.offsetHeight;

      if (scrollY < heroHeight) {
        const progress = scrollY / heroHeight;

        gsap.to('.hero-title', {
          y: scrollY * 0.3,
          opacity: 1 - progress * 1.5,
          duration: 0.1,
        });

        gsap.to('.hero-tagline', {
          y: scrollY * 0.2,
          opacity: 1 - progress * 1.2,
          duration: 0.1,
        });

        gsap.to('.hero-cta', {
          y: scrollY * 0.1,
          opacity: 1 - progress,
          duration: 0.1,
        });
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });

    // Cleanup
    document.addEventListener('astro:before-swap', () => {
      window.removeEventListener('scroll', handleScroll);
    });
  });
</script>
