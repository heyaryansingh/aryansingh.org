---
/**
 * SpacetimeHero.astro
 *
 * Hero section with Spacetime Manifold background.
 * Deep void with flowing particles and geodesic curves
 * representing gravity wells in curved spacetime.
 *
 * USAGE:
 * <VectorFieldHero>
 *   <HeroContent />
 * </VectorFieldHero>
 */

import SpacetimeManifold from "./canvas/SpacetimeManifold";
---

<div class="spacetime-hero" id="spacetime-hero">
    <div class="spacetime-hero__canvas">
        <SpacetimeManifold client:load particleCount={2000} curveCount={6} />
    </div>
    <div class="spacetime-hero__content">
        <slot />
    </div>
</div>

<style>
    .spacetime-hero {
        position: relative;
        min-height: 100vh;
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-bg-primary);
    }

    .spacetime-hero__canvas {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .spacetime-hero__content {
        position: relative;
        z-index: 2;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Reduced motion: hide canvas entirely */
    @media (prefers-reduced-motion: reduce) {
        .spacetime-hero__canvas {
            display: none;
        }
    }
</style>
