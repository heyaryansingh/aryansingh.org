---
/**
 * Latest Blog Posts Component
 *
 * Displays the 3 most recent blog posts.
 * In Phase 7, this will pull from actual content collections.
 *
 * USAGE:
 * <LatestPosts />
 */

import { formatDate } from '../lib/utils';

// Placeholder posts for now (will be replaced with content collections in Phase 7)
const posts = [
  {
    slug: 'exploring-llm-reasoning',
    title: 'Exploring LLM Reasoning Capabilities',
    description: 'A deep dive into how large language models approach complex reasoning tasks and where they still struggle.',
    date: new Date('2026-01-20'),
    type: 'technical',
    readingTime: '8 min read',
  },
  {
    slug: 'monthly-update-january',
    title: 'January 2026: Building in Public',
    description: 'Monthly reflection on what I learned, built, and thought about this month.',
    date: new Date('2026-01-15'),
    type: 'monthly-update',
    readingTime: '5 min read',
  },
  {
    slug: 'paper-summary-attention',
    title: 'Paper Summary: Attention Is All You Need',
    description: 'Breaking down the transformer architecture that revolutionized natural language processing.',
    date: new Date('2026-01-10'),
    type: 'paper-summary',
    readingTime: '12 min read',
  },
];

const typeColors: Record<string, string> = {
  'paper-summary': 'var(--color-accent-primary)',
  'technical': 'var(--color-accent-secondary)',
  'reflection': 'var(--color-accent-tertiary)',
  'monthly-update': 'var(--color-success)',
};
---

<div class="posts-grid">
  {posts.map((post, index) => (
    <article class="post-card animate-fade-in-up" style={`animation-delay: ${index * 100}ms`}>
      <div class="post-card__header">
        <time class="post-card__date" datetime={post.date.toISOString()}>
          {formatDate(post.date)}
        </time>
        <span class="post-card__reading-time">{post.readingTime}</span>
      </div>

      <h3 class="post-card__title">
        <a href={`/blog/${post.slug}`}>{post.title}</a>
      </h3>

      <p class="post-card__description">{post.description}</p>

      <div class="post-card__footer">
        <span
          class="post-card__type"
          style={`--type-color: ${typeColors[post.type] || 'var(--color-text-tertiary)'}`}
        >
          {post.type.replace('-', ' ')}
        </span>
      </div>
    </article>
  ))}
</div>

<style>
  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .post-card {
    padding: var(--space-lg);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
    background: var(--color-bg-primary);
    transition: all var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--color-accent-primary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .post-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-sm);
  }

  .post-card__date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  .post-card__reading-time {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .post-card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: var(--space-sm);
  }

  .post-card__title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .post-card:hover .post-card__title a {
    color: var(--color-accent-primary);
  }

  .post-card__description {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .post-card__footer {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .post-card__type {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-xs);
    text-transform: capitalize;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--type-color);
    border: 1px solid var(--type-color);
    opacity: 0.8;
  }
</style>
