---
/**
 * Project Card Component
 *
 * Displays a single project in the portfolio grid.
 * Features hover animations and links to project details.
 *
 * USAGE:
 * <ProjectCard project={projectData} index={0} />
 */

interface Project {
  id: number;
  name: string;
  slug: string;
  description: string;
  tags: string[];
  category: string;
  github?: string;
  demo?: string;
  image?: string;
  featured: boolean;
  status: string;
  year: number;
}

interface Props {
  project: Project;
  index: number;
}

const { project, index } = Astro.props;

const categoryColors: Record<string, string> = {
  ai: 'var(--color-accent-primary)',
  web: 'var(--color-accent-secondary)',
  tools: 'var(--color-accent-tertiary)',
  default: 'var(--color-text-tertiary)',
};

const categoryColor = categoryColors[project.category] || categoryColors.default;
---

<article
  class:list={['project-card', { 'project-card--featured': project.featured }]}
  data-category={project.category}
  style={`animation-delay: ${index * 50}ms; --category-color: ${categoryColor}`}
>
  <div class="project-card__image">
    <div class="project-card__gradient"></div>
    {project.featured && (
      <span class="project-card__featured-badge">Featured</span>
    )}
    {project.status === 'archived' && (
      <span class="project-card__status-badge">Archived</span>
    )}
  </div>

  <div class="project-card__content">
    <div class="project-card__header">
      <span class="project-card__category">{project.category}</span>
      <span class="project-card__year">{project.year}</span>
    </div>

    <h3 class="project-card__title">
      <a href={`/portfolio/${project.slug}`}>{project.name}</a>
    </h3>

    <p class="project-card__description">{project.description}</p>

    <div class="project-card__tags">
      {project.tags.slice(0, 4).map((tag) => (
        <span class="project-card__tag">{tag}</span>
      ))}
    </div>

    <div class="project-card__actions">
      {project.github && (
        <a href={project.github} class="project-card__link" target="_blank" rel="noopener noreferrer" aria-label="View source on GitHub">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>Source</span>
        </a>
      )}
      {project.demo && (
        <a href={project.demo} class="project-card__link project-card__link--primary" target="_blank" rel="noopener noreferrer" aria-label="View live demo">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
            <polyline points="15 3 21 3 21 9"/>
            <line x1="10" y1="14" x2="21" y2="3"/>
          </svg>
          <span>Demo</span>
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    position: relative;
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
    background: var(--color-bg-primary);
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fade-in-up 0.6s ease forwards;
    opacity: 0;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project-card:hover {
    transform: translateY(-8px);
    border-color: var(--category-color);
    box-shadow:
      0 20px 40px -15px rgba(0, 0, 0, 0.1),
      0 0 0 1px var(--category-color);
  }

  .project-card--featured {
    grid-column: span 1;
  }

  @media (min-width: 1024px) {
    .project-card--featured {
      grid-column: span 2;
    }

    .project-card--featured .project-card__image {
      height: 240px;
    }
  }

  .project-card__image {
    position: relative;
    height: 180px;
    overflow: hidden;
  }

  .project-card__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--category-color) 80%, transparent) 0%,
      color-mix(in srgb, var(--category-color) 40%, var(--color-accent-secondary)) 100%
    );
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-card__gradient {
    transform: scale(1.1);
  }

  .project-card__featured-badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-text-primary);
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: var(--radius-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-card__status-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(0, 0, 0, 0.6);
    color: white;
    font-size: var(--text-xs);
    border-radius: var(--radius-md);
  }

  .project-card__content {
    padding: var(--space-lg);
  }

  .project-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-sm);
  }

  .project-card__category {
    font-size: var(--text-xs);
    color: var(--category-color);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
  }

  .project-card__year {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .project-card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .project-card__title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-card:hover .project-card__title a {
    color: var(--category-color);
  }

  .project-card__description {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .project-card__tag {
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-xs);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
  }

  .project-card__actions {
    display: flex;
    gap: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-card__link:hover {
    color: var(--color-text-primary);
  }

  .project-card__link--primary {
    color: var(--category-color);
  }

  .project-card__link--primary:hover {
    color: var(--color-accent-secondary);
  }
</style>
